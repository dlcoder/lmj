{% if paginationTotalPages > 1 %}
<nav class="pagination" aria-label="Pagination">
  <div class="pagination-links">
    {% if paginationPrevHref %}
      <a href="{{ paginationPrevHref }}" class="pagination-link pagination-link--prev">
        {{ i18n[locale].paginationPrev }}
      </a>
    {% endif %}

    <span class="pagination-info">
      {{ paginationCurrentPage }} / {{ paginationTotalPages }}
    </span>

    {% if paginationNextHref %}
      <a href="{{ paginationNextHref }}" class="pagination-link pagination-link--next">
        {{ i18n[locale].paginationNext }}
      </a>
    {% endif %}
  </div>
</nav>
{% endif %}
