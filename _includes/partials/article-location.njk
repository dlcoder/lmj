{%- set articleLocalities = article.localities | getLocalities(localities) -%}
{% if articleLocalities.length > 0 %}
  <div class="article-location">
    {%- for loc in articleLocalities -%}
      <a href="/{{ locale }}/localities/{{ loc.slug }}">{{ loc.name }}</a> ({{ loc.region }}){% if not loop.last %}, {% endif %}
    {%- endfor -%}
  </div>
{% endif %}
